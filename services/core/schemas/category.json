{
  "schema":{
     "title":"Create category",
     "description":"Fill the form to create category",
     "type":"object",
     "required":[
        "title",
        "description",
        "logo",
        "parents",
        "properties"
     ],
     "properties":{
        "title":{
           "type":"string",
           "title":"Category Name"
        },
        "description":{
           "type":"string",
           "title":"Category description"
        },
        "logo":{
           "type":"string",
           "title":"Logo",
           "format":"data-url"
        },
        "parents":{
           "title":"Category parents",
           "type":"array",
           "description":"Select parent category. If you want to create root category, leave this field empty. Selected category path will be highlighted",
           "items":{
              "type":"string"
           }
        },
        "properties":{
           "title":"Category fields",
           "type":"array",
           "items":{
              "type":"string"
           }
        }
     }
  },
  "uiSchema":{
     "ui:order":[
        "title",
        "description",
        "logo",
        "parents",
        "properties"
     ],
     "parents":{
        "ui:widget":"parentsWidget"
     },
     "properties":{
        "ui:widget":"fieldsWidget"
     }
  }
}